@model EduZone.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="card text-center w-50 align-content-center" style=" font-family: 'Signika', sans-serif;margin-top:15vh;margin-left:25%">
    <div class="card-header h5 text-white bg-primary">Password Reset</div>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal p-3", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Code)
        <div class="form-floating mb-3">

            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <label for="Email">Email</label>
        </div>
        <div class="form-floating mb-3">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <label for="Password">Password</label>
        </div>
        <div class="form-floating mb-3">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            <label for="ConfirmPassword">Confirm Password</label>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 ms-5">
                <input type="submit" class="btn btn-success w-50 fw-bold " value="Reset" />
            </div>
        </div>
    }

</div>



@Scripts.Render("~/bundles/jqueryval")
